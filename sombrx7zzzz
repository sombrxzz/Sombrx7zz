      animation: discoteca 2s infinite;
      margin: 10px 0;
    }

    .texto-verde {
      font-size: 32px;
      font-weight: bold;
      color: limegreen;
      margin: 10px 0;
    }

    @keyframes discoteca {
      0%   { color: red; }
      20%  { color: orange; }
      40%  { color: yellow; }
      60%  { color: green; }
      80%  { color: blue; }
      100% { color: violet; }
